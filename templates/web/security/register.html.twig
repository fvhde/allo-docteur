{% extends 'web/layout.html.twig' %}

{% block page_title %}Inscription{% endblock %}
{% block main %}
<div class="bg_color_2">
    <div class="container margin_60_35">
        <div id="register">
            <h1>Please register to Findoctor!</h1>
            <div class="row justify-content-center">
                <div class="col-md-5">
                    {{ form_start(form) }}
                        <div class="box_form">
                            <div class="form-group">
                                <label>Name</label>
                                <input name="{{ field_name(form.firstName) }}" value="{{ field_value(form.firstName) }}" placeholder="{{ field_label(form.firstName) }}" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Last name</label>
                                <input name="{{ field_name(form.lastName) }}" value="{{ field_value(form.lastName) }}" placeholder="{{ field_label(form.lastName) }}" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Gender</label>
                                <select name="{{ field_name(form.gender) }}" class="form-control">
                                    {% for label, value in field_choices(form.gender) %}
                                        <option value="{{ value }}">{{ label }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" name="{{ field_name(form.email) }}" value="{{ field_value(form.email) }}" placeholder="{{ field_label(form.email) }}" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Birthday</label>
                                <input type="date" name="{{ field_name(form.birthday) }}"  placeholder="{{ field_label(form.birthday) }}" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control"  name="{{ field_name(form.password.first) }}" placeholder="Your password">
                            </div>
                            <div class="form-group">
                                <label>Confirm password</label>
                                <input type="password" class="form-control"  name="{{ field_name(form.password.second) }}" placeholder="Confirm password">
                            </div>
                            <div id="pass-info" class="clearfix"></div>
                            <div class="checkbox-holder text-left">
                                <div class="checkbox_2">
                                    <input type="checkbox" name="{{ field_name(form.termsAccepted) }}" value="{{ field_value(form.termsAccepted) }}"  placeholder="{{ field_label(form.termsAccepted) }}" class="form-control">
                                    <label for="check_2"><span>I Agree to the <strong>Terms &amp; Conditions</strong></span></label>
                                </div>
                            </div>
                            <div class="form-group text-center add_top_30">
                                <input class="btn_1" type="submit" value="Submit">
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}">
                    <p class="text-center"><small>Has voluptua vivendum accusamus cu. Ut per assueverit temporibus dissentiet. Eum no atqui putant democritum, velit nusquam sententiae vis no.</small></p>
                    {{ form_end(form) }}
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /register -->
    </div>
</div>
{% endblock %}