{% extends 'bundles/EasyAdminBundle/layout.html.twig' %}

{% block content_title %}
    Edit Profile
{% endblock %}
{% block main %}
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="submit" class="btn-primary" name="{{ field_name(form.save) }}">
                </div>
            </div>
        </div>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-file"></i>Basic info</h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="{{ field_name(form.firstName) }}" value="{{ field_value(form.firstName) }}" placeholder="{{ field_label(form.firstName) }}"  class="form-control">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Last name</label>
                        <input type="text" class="form-control" name="{{ field_name(form.lastName) }}" value="{{ field_value(form.lastName) }}" placeholder="{{ field_label(form.lastName) }}">
                    </div>
                </div>
            </div>
            <!-- /row-->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="{{ field_name(form.email) }}" value="{{ field_value(form.email) }}" placeholder="{{ field_label(form.email) }}">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Birthday</label>
                        <input type="date" class="form-control" name="{{ field_name(form.birthday) }}" value="{{ field_value(form.birthday) }}" placeholder="{{ field_label(form.birthday) }}">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Gender</label>
                        <select name="{{ field_name(form.gender) }}" class="form-control">
                            {% for label, value in field_choices(form.gender) %}
                                <option value="{{ value }}">{{ label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <!-- /row-->
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Profile picture</label>
                        <form action="/file-upload" class="dropzone" ></form>
                    </div>
                </div>
            </div>
            <!-- /row-->
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Professional statement</label>
                        <div class="editor"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-clock"></i>Horaires</h2>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h6>Horaires de disponibilité</h6>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <input type="checkbox" name="monday">
                                <label>Lundi</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <input type="time" name="monday_from">
                                 à
                                <input type="time" name="monday_to">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <input type="checkbox" name="thusday">
                                <label>Mardi</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <input type="time" name="thusday_from">
                                à
                                <input type="time" name="thusday_to">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /row-->
        </div>
    {{ form_end(form) }}

{% endblock %}
{% block body_javascript %}
    <script src="{{ asset('assets/admin/vendor/dropzone.min.js') }}"></script>
    <script src="{{ asset('assets/admin/js/editor/summernote-bs4.min.js') }}"></script>
    <script>
        $('.editor').summernote({
            fontSizes: ['10', '14'],
            toolbar: [
                // [groupName, [list of button]]
                ['style', ['bold', 'italic', 'underline', 'clear']],
                ['font', ['strikethrough']],
                ['fontsize', ['fontsize']],
                ['para', ['ul', 'ol', 'paragraph']]
            ],
            placeholder: 'Write here your description....',
            tabsize: 2,
            height: 200
        });
    </script>
{% endblock body_javascript %}