{% extends 'bundles/EasyAdminBundle/layout.html.twig' %}

{% block content_title %}
    Edit Profile
{% endblock %}
{% block main %}
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="submit" class="btn-primary" name="{{ field_name(form.save) }}">
                </div>
            </div>
        </div>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-file"></i>Basic info</h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="{{ field_name(form.firstName) }}" value="{{ field_value(form.firstName) }}" placeholder="{{ field_label(form.firstName) }}"  class="form-control">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Last name</label>
                        <input type="text" class="form-control" name="{{ field_name(form.lastName) }}" value="{{ field_value(form.lastName) }}" placeholder="{{ field_label(form.lastName) }}">
                    </div>
                </div>
            </div>
            <!-- /row-->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="{{ field_name(form.email) }}" value="{{ field_value(form.email) }}" placeholder="{{ field_label(form.email) }}">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Birthday</label>
                        <input type="date" class="form-control" name="{{ field_name(form.birthday) }}" value="{{ field_value(form.birthday) }}" placeholder="{{ field_label(form.birthday) }}">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Gender</label>
                        <select name="{{ field_name(form.gender) }}" class="form-control">
                            {% for label, value in field_choices(form.gender) %}
                                <option value="{{ value }}">{{ label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <!-- /row-->
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Profile picture</label>
                        <input type="file" class="form-control">
                    </div>
                </div>
            </div>
            <!-- /row-->
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Description</label>
                        <input type="text" class="form-control" name="{{ field_name(form.description) }}" value="{{ field_value(form.description) }}" placeholder="{{ field_label(form.description) }}" >
                    </div>
                </div>
            </div>
        </div>
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-clock"></i>Horaires</h2>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h6>Horaires de disponibilité</h6>
                        <div class="row">
                            <div class="col-md-1">
                                <div class="form-group">
                                    <input type="checkbox" name="{{ field_name(form.monday.available) }}" value="{{ field_value(form.monday.available) }}">
                                    <label>Lundi</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <input type="time" name="{{ field_name(form.monday.from) }}" value="{{ field_value(form.monday.from) }}">
                                     à
                                    <input type="time" name="{{ field_name(form.monday.to) }}" value="{{ field_value(form.monday.to) }}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-1">
                                <div class="form-group">
                                    <input type="checkbox" name="{{ field_name(form.tuesday.available) }}" value="{{ field_value(form.tuesday.available) }}">
                                    <label>Mardi</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <input type="time" name="{{ field_name(form.tuesday.from) }}" value="{{ field_value(form.tuesday.from) }}">
                                     à
                                    <input type="time" name="{{ field_name(form.tuesday.to) }}" value="{{ field_value(form.tuesday.to) }}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-1">
                                <div class="form-group">
                                    <input type="checkbox" name="{{ field_name(form.wednesday.available) }}" value="{{ field_value(form.wednesday.available) }}">
                                    <label>Mercredi</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <input type="time" name="{{ field_name(form.wednesday.from) }}" value="{{ field_value(form.wednesday.from) }}">
                                     à
                                    <input type="time" name="{{ field_name(form.wednesday.to) }}" value="{{ field_value(form.wednesday.to) }}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-1">
                                <div class="form-group">
                                    <input type="checkbox" name="{{ field_name(form.thursday.available) }}" value="{{ field_value(form.thursday.available) }}">
                                    <label>Jeudi</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <input type="time" name="{{ field_name(form.thursday.from) }}" value="{{ field_value(form.thursday.from) }}">
                                     à
                                    <input type="time" name="{{ field_name(form.thursday.to) }}" value="{{ field_value(form.thursday.to) }}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-1">
                                <div class="form-group">
                                    <input type="checkbox" name="{{ field_name(form.friday.available) }}" value="{{ field_value(form.friday.available) }}">
                                    <label>Vendredi</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <input type="time" name="{{ field_name(form.friday.from) }}" value="{{ field_value(form.friday.from) }}">
                                     à
                                    <input type="time" name="{{ field_name(form.friday.to) }}" value="{{ field_value(form.friday.to) }}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-1">
                                <div class="form-group">
                                    <input type="checkbox" name="{{ field_name(form.saturday.available) }}" value="{{ field_value(form.saturday.available) }}">
                                    <label>Samedi</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <input type="time" name="{{ field_name(form.saturday.from) }}" value="{{ field_value(form.saturday.from) }}">
                                     à
                                    <input type="time" name="{{ field_name(form.saturday.to) }}" value="{{ field_value(form.saturday.to) }}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-1">
                                <div class="form-group">
                                    <input type="checkbox" name="{{ field_name(form.sunday.available) }}" value="{{ field_value(form.sunday.available) }}">
                                    <label>Dimanche</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <input type="time" name="{{ field_name(form.sunday.from) }}" value="{{ field_value(form.sunday.from) }}">
                                     à
                                    <input type="time" name="{{ field_name(form.sunday.to) }}" value="{{ field_value(form.sunday.to) }}">
                                </div>
                            </div>
                        </div>
                </div>
            </div>
            <!-- /row-->
        </div>
    {{ form_end(form) }}

{% endblock %}
